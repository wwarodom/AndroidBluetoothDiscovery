<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.warodom.bt.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtView"
        android:scrollbars = "vertical"
        android:text="@string/list_of_nearby_devices"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDiscovery"
        android:text="@string/discovery"/>

   <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintLeft_toRightOf="@id/btnDiscovery"
        android:id="@+id/btnStatus"
        android:text="@string/status"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintLeft_toRightOf="@id/btnStatus"
        android:id="@+id/btnStop"
        android:text="@string/stop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintLeft_toRightOf="@id/btnStop"
        android:id="@+id/btnExit"
        android:text="@string/exit"/>

</android.support.constraint.ConstraintLayout>
